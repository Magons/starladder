.row.page-header
  .col-xs-8
    %h2 Teams
  - if current_user && current_user.teams.empty?
    .col-xs-2.pull-right
      = link_to 'Create Team', new_team_path, class: 'btn btn-default mt-30'
.row.teams
  - @teams.each do |team|
    .col-sm-3.col-md-2.col-xs-6
      .thumbnail
        - if team.logo.url
          = image_tag team.logo.url, class: 'img-rounded logo'
        .caption
          %h4.name= team.name
          %p.text-muted.small= l team.created_at, format: :full 
          %p.text-muted.small
            = team.owner.nick
            - if current_user == team.owner
              %span.pull-right
                = link_to 'Edit', edit_team_path(team), class: 'btn-xs btn-primary'
                = link_to 'Delete', team, method: :delete, data: { confirm: 'Are you sure?' }, 
                class: 'btn-xs btn-danger'
